<h1 class='text-center'>Login</h1>
<div class="container">
  <div class="col-sm-4 col-sm-offset-4">
    <%= form_for(@user, url: login_path, method: :post) do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "Login", class: "form-control btn btn-success" %>
      </div>
    <% end %>
    <br/>
    <div class="form-group" id="sign-up"><%= link_to "Sign Up", '#', class: "form-control btn btn-success"  %>
    </div>
    <div class="form-group"><%= link_to "Sign Up As Customer", new_user_path, class: "form-control btn btn-success signup-options" %>
    </div>
    <div class="form-group"><%= link_to "Sign Up As Supplier", new_supplier_path, class: "form-control btn btn-success signup-options" %>
    </div>

    </div>


</div>
