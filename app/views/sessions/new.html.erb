<h2 class='text-center'>Login</h2>
<div class="container">
  <div class="col-sm-4 col-sm-offset-4">
    <%= form_for(@user, url: login_path, method: :post) do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "Login", class: "form-control btn btn-success" %>
      </div>
    <% end %>
    <br/>

    </div>

    <div id="no-account" class='text-center col-sm-4 col-sm-offset-4'>
      <%= link_to "Don't have an account?", new_user_path %>
    </div>

</div>
