<div class="col-md-8 col-md-offset-2">
  <h3>Review Order</h3>
<table class="table">
  <thead>
    <td>Item</td>
    <td>Quantity</td>
    <td>Price</td>
    <td>Total</td>
  </thead>
  <tbody>

    <% @cart_items.each do |item| %>
      <tr>
        <td><%= link_to item.title, item %></td>
        <td><%= @cart.count_of(item) %></td>
        <td><%= @order.display(item.price) %></td>
        <td><%= @order.display(@cart.line_total(item)) %></td>
      </tr>
    <% end %>

      <tr>
        <td></td>
        <td></td>
        <td>Total:</td>
        <td><%= @order.display(@cart.cost_total) %></td>
      </tr>
  </tbody>
</table>

<%= form_for @order do |f| %>

  <%= fields_for :coordinate, @order.coordinate do |coordinate| %>
    <%= coordinate.hidden_field 'latitude' %>
    <%= coordinate.hidden_field 'longitude' %>
  <% end %>

  <h3 class="text-center">Confirm or change your location</h3>
  <h5 id="map-coordinates"></h5>
  <div id="map-container">
    <div id="map-canvas"></div>
  </div>


  <div class="button">
    <%= f.submit "Submit Order", id: 'submit-order', class: "form-control btn btn-success" %>
  </div>
<% end %>
</div>
