<h2 class="text-center bold">All Items</h2>
<div class="col-xs-12 search-bar">
  <div class="col-md-6 col-md-offset-3 col-xs-12 text-center">
    <%= search_form_for @search do |f| %>
      <%= hidden_field_tag :title_cont, "Title contains" %>
      <span>
        <%= f.text_field :title_cont, size: 50, class: "input-sm search-field" %>
      <span>
        <%= f.submit "Search Items", name: nil, class: "btn btn-info bigger-button-text", id: "search-submit"  %>
      </span>
      </span>
    <% end %>
  </div>
</div>

<div class="text-center container col-md-6 col-md-offset-3">
  <%= render partial: @items %>
</div>
