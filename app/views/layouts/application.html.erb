<!DOCTYPE html>
<html>
<head>
  <title>AIRLIFT</title>
  <%= favicon_link_tag 'favicon.ico' %>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= csrf_meta_tags %>
  <script type="text/javascript"
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA8psUqhexFnIdseHcXP6zhgp9H9uXgFo8">
  </script>
</head>
<body>
  <nav id="slide-menu">
    <div class="wrap col-lg-12">
      <ul>
        <li>
          <span class="glyphicon glyphicon-tags"></span>
          <%=link_to 'Browse Suppliers', suppliers_path %>
        </li>
        <% if current_user %>
          <% if current_user.admin? %>
            <li><%= link_to 'Admin', rails_admin_path, id: 'admin' %></li>
          <% end %>
          <li>
            <span class="glyphicon glyphicon-cog"></span>
            <%= link_to 'User', user_path(current_user) %>
          </li>
          <li>
            <%= link_to 'Logout', logout_path, id: 'logout', method: 'delete' %></li>
        <% else %>
          <li>
            <span class="glyphicon glyphicon-user"></span>
            <%= link_to 'Register Customer', new_user_path %>
          </li>
          <li>
            <span class="glyphicon glyphicon-globe"></span>
            <%= link_to 'Register Supplier', new_supplier_path %>
          </li>
          <li>
            <span class="glyphicon glyphicon-log-in"></span>
            <%= link_to 'Login', login_path, id: 'login' %>
          </li>
        <% end %>
        <li>
          <a href='<%= cart_items_path %>'>
            <span class='glyphicon glyphicon-shopping-cart'></span>
            <span class="badge"><%= @cart.count_total %></span>
          </a>
        </li>
      </ul>
    </div>
  </nav>
  <div id="content" class="container">
    <div class="header row">
    <div class="col-xs-3 menu-trigger">
      <span class="glyphicon glyphicon-align-justify" aria-hidden="true"></span>
    </div>
      <div class="col-xs-3-offset-3 head-center">
        <div class ="logo">
          <h3><%= link_to 'AIRLIFT', root_path, id: 'logo-title' %></h3>
        </div>
      </div>
    </div>
    <%= render 'layouts/notices' %>
    <%= yield %>
  </div>
  <%= javascript_include_tag 'application' %>
</body>
</html>
