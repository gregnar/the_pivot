<% if current_user && @categories.first.supplier == current_supplier %>
<table class="table table-striped table-hover text-center">
  <tbody>
    <td>
      <% current_supplier.categories.each do |category| %>
      <td>
        <%= category.name %>
        <%= link_to 'Edit', edit_supplier_category_path(id: category, slug: params[:slug]) %>
        <% end %>
      </td>
    </td>
  </tbody>
</table>
<% end %>
