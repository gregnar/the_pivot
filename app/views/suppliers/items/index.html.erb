<h1 class= "text-center"><%= current_supplier.name %></h1>
<div class="col-md-3 col-md-offset-3">
  <div style="display: none;" id="hiddenText">
    <h3>Phone: <%= current_supplier.phone %></h3>
    <h3>Website: <a href="http://www.turing.io"><%= current_supplier.website %></h3>
    <h3>Email: <%= current_supplier.email %> </h3>
    <h3>Address: <%= current_supplier.description%></h3>
  </div>
  <a href="#" onclick="$('#hiddenText').show(); return false;">Show more information</a>
</div><br>

<% if current_supplier_admin? %>
<%= link_to 'Add Item', new_supplier_item_path(slug: @slug), class: 'btn btn-info' %>
<% end %>

<div class='col-md-6 col-md-offset-3 clear'>
  <% current_supplier.categories.each do |category| %>
    <h3 class='text-center'><%= category.name %></h3>
    <% if current_supplier_admin? %>
      <%= render partial: category.items %>
    <% else %>
      <%= render partial: category.items.active %>
   <% end %>
  <% end %>
</div>
