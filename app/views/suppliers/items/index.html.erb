<h1 class= "text-center">Supplies by <%= current_supplier.name %></h1>
<h2>Phone: <%= current_supplier.phone %> </h2>
<h2>Email: <%= current_supplier.email %> </h2>
<h2>Address: <%= current_supplier.address %> </h2>
<div class='text-center'>
  <%= search_form_for @search do |f| %>
    <%= hidden_field_tag :title_cont, "Title contains" %>
    <%= f.text_field :title_cont, class: "input-sm search-field" %>
    <%= f.submit "search", name: nil, class: "btn btn-success"  %>
  <% end %>
</div>


<div class='col-md-6'>
  <h3 class='text-center'>Relief!</h3>
  <%= render partial: @items.active %>
</div>
